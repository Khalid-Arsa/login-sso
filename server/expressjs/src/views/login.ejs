	<body>
		<section class="prompt">
			<h1>Sign in</h1>
			<% if (hasMessages) { %>
			<section class="messages">
				<% messages.forEach(function(message) { %>
				<p><%= message %></p>
				<% }); %>
			</section>
			<% } %>
			<a class="button facebook" href="#">Sign in with Facebook</a>
		</section>
		<footer class="info">
			<p>Created by Khalid Arsa</p>
			<p>Part of Login SSO</p>
			<p>Authentication powered by <a href="https://www.passportjs.org">PassportJs</a></p>
		</footer>
	</body>
</html>
